
@{
    ViewBag.Title = "NewEventForm";
}

<h2>NewEventForm</h2>
<form name="newEvent" method="post">
    <p>Event:<input type="text" name="Event" id="event" /></p>
    <p>Type:<input type="text" name="Type" id="Type"/></p>
    <p>Host:<input type="text" name="Host" id="Host" /></p>
    <p>Email:<input type="text" name="Email" id="Email" /></p>
    <p>Event Number:<input type="number" min="1" max="10" name="EventNumber" id="EventNumber" /></p>
    <p>
        Is the event public?(choose an option)<select name="IsActive" id="IsActive">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </p>
    <input type="submit" value="Submit Event" />
</form>
